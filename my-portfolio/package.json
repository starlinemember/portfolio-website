{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "Professional portfolio website with dual themes and admin panel",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "npx live-server --port=3000 --host=localhost --open=/index.html",
    "build": "npm run optimize && npm run minify",
    "optimize": "npx imagemin assets/images/**/*.{jpg,png,webp} --out-dir=dist/assets/images",
    "minify": "npx html-minifier-terser --input-dir . --output-dir dist --file-ext html --remove-comments --collapse-whitespace --minify-css --minify-js",
    "deploy": "vercel --prod",
    "preview": "vercel",
    "test": "npx lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "security-check": "npx audit-ci --config .auditrc.json",
    "validate-html": "npx html-validate *.html",
    "lint-css": "npx stylelint '**/*.css'",
    "lint-js": "npx eslint '**/*.js'",
    "format": "npx prettier --write '**/*.{html,css,js,json,md}'",
    "backup-db": "node scripts/backup-database.js",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "pre-deploy": "npm run validate-html && npm run lint-css && npm run lint-js && npm run test"
  },
  "keywords": [
    "portfolio",
    "website",
    "supabase",
    "vercel",
    "admin-panel",
    "responsive",
    "dual-theme",
    "security"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/portfolio-website.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/portfolio-website/issues"
  },
  "homepage": "https://yourportfolio.vercel.app",
  "devDependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "audit-ci": "^7.0.1",
    "eslint": "^8.57.0",
    "html-minifier-terser": "^7.2.0",
    "html-validate": "^8.9.1",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "^8.0.0",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "prettier": "^3.1.1",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "vercel": "^33.0.1"
  },
  "dependencies": {
    "@emailjs/browser": "^4.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
